{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": ["dom", "es2015", "es2017"],
    "resolveJsonModule": true
  }
}
